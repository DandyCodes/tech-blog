<main class="container is-fluid">
  <button id="create-button" class="button is-link is-medium">Create New Post</button>
  <article id="new-post" class="box is-hidden">
    <label for="create-title-input">Title</label>
    <input
      class="edit-title-input title has-text-black"
      name="create-title-input"
      id="create-title-input"
    ></input>
    <label for="create-input">Content</label>
    <textarea
      class="edit-content-textarea"
      name="create-content-textarea"
      id="create-content-textarea"
    ></textarea>
    <button
      id="post-button" class="button is-primary is-medium"
    >Post</button>
    <button class="cancel-button button is-medium">Cancel</button>
  </article>
  {{#each posts}}
    <article class="box post" data-id="{{this.id}}">
      <section class="current-post-section">
        <p class="title post-title">{{this.title}}</p>
        <p class="subtitle post-date">
            {{this.niceDate}}</p>
        <p class="post-content">{{this.content}}</p>
      </section>
      <section class="edit-post-section is-hidden">
        <input
          class="edit-title-input title has-text-black"
          name="edit-{{this.id}}-title-input"
          id="edit-{{this.id}}-title-input"
        ></input>
        <textarea
          class="edit-content-textarea"
          name="edit-{{this.id}}-content-textarea"
          id="edit-{{this.id}}-content-textarea"
        ></textarea>
        <button
          class="update-button button is-primary is-medium"
        >Update</button>
        <button class="cancel-button button is-medium">Cancel</button>
        <br />
        <button class="delete-button button is-medium is-danger">Delete</button>
      </section>

    </article>
  {{/each}}
</main>
<script src="/js/dashboard.js" type="module"></script>